<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ControlButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="ModeSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">18sp</item>
        <item name="android:trackTint">@color/switch_track</item>
    </style>
</resources>